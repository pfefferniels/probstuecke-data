  <text>
    <body>
      <p>In addition to the required modules, this customization loads the
      modules for
      <list>
          <item>transcriptions of speech</item>
          <item>linking, segmentation, and alignment</item>
          <item>language corpora</item>
          <item>names, dates, people, and places</item>
        </list>.
      </p>
      <schemaSpec ident="tei_musical_lessons" start="TEI teiCorpus" prefix="tei_" targetLang="en"
        docLang="en">
        <moduleRef key="header"
          except="calendar calendarDesc conversion correspAction correspContext correspDesc handNote xenoData"/>
        <moduleRef key="core" except="add cb del divGen gb gloss hi rb rt ruby"/>
        <moduleRef key="tei"/>
        <moduleRef key="textstructure"
          except="back dateline div div1 div2 div3 div4 div5 div6 div7 docAuthor docDate docEdition docImprint docTitle epigraph floatingText front"/>
        <moduleRef key="spoken"/>
        <moduleRef key="namesdates" except="birth death faith floruit"/>
        <moduleRef key="linking" except="ab"/>
        <moduleRef key="corpus" except="derivation factuality"/>
        <elementSpec ident="kinesic" mode="change">
          <attList>
            <attDef ident="type" mode="change" usage="req">
              <valList type="semi" mode="change">
                <valItem mode="add" ident="playing">
                  <desc versionDate="2021-08-15" xml:lang="en"
                    >Indicates any kind of playing on a musical instrument in the lesson.</desc>
                </valItem>
              </valList>
            </attDef>
          </attList>
        </elementSpec>
        <elementSpec ident="note" mode="change">
          <attList>
            <attDef ident="resp" mode="change" usage="req"/>
            <attDef ident="type" mode="change" usage="req">
              <valList type="closed" mode="change">
                <valItem mode="add" ident="editorial"/>
              </valList>
            </attDef>
          </attList>
        </elementSpec>
        <elementSpec ident="person" mode="change">
          <attList>
            <attDef ident="role" mode="change">
              <valList type="semi" mode="change">
                <valItem mode="add" ident="teacher"/>
                <valItem mode="add" ident="student"/>
              </valList>
            </attDef>
          </attList>
        </elementSpec>
        <elementSpec ident="ptr" mode="change">
          <attList>
            <attDef ident="type" mode="change">
              <desc versionDate="2021-08-15" xml:lang="en"/>
              <valList type="semi" mode="change">
                <valItem mode="add" ident="audio">
                  <desc versionDate="2021-08-15" xml:lang="en"
                    >Points to an audio file that contains the playing (e.g. for demonstration purpose) that occured at the specific point of time in the lesson.</desc>
                </valItem>
                <valItem mode="add" ident="transcription">
                  <desc versionDate="2021-08-15" xml:lang="en"
                    >Points to a transcription of the playing that occured at the specific point of time in the lesson</desc>
                </valItem>
              </valList>
            </attDef>
          </attList>
        </elementSpec>
        <elementSpec ident="u" mode="change">
          <attList>
            <attDef ident="who" mode="change" usage="req"/>
          </attList>
        </elementSpec>
      </schemaSpec>
    </body>
